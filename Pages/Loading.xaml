<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToMi.Pages.Loading"
             BackgroundColor="#f7f7f7">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
        <Image Source="tomilogo.png"
               Aspect="AspectFit"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="400"
               HeightRequest="400"
               Margin="0, 0, 0, 20"/>

        <ActivityIndicator IsRunning="True"
                           Color="#ff9900"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           WidthRequest="50"
                           HeightRequest="50"/>

        <Label Text="Загрузка..."
               TextColor="#333333"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="0, 20, 0, 0"
               FontSize="16"/>

        <Label Text="Пожалуйста, подождите"
               TextColor="#666666"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="0, 10, 0, 0"
               FontSize="14"/>
    </VerticalStackLayout>

</ContentPage>